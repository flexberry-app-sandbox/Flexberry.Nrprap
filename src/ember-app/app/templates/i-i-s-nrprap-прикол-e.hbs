<h3 class="ui header">{{t "forms.i-i-s-nrprap-прикол-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.строка
      class=(if (v-get validationModel "строка" "isInvalid") "error")
      label=(t "forms.i-i-s-nrprap-прикол-e.строка-caption")
      data-test-i-i-s-nrprap-прикол-e-строка=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "строка" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-nrprap-прикол-e.класс-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.класс
      displayAttributeName="номер"
      autocomplete=true
      relationName="класс"
      projection="КлассL"
      title=(t "forms.i-i-s-nrprap-прикол-e.класс-caption")
      readonly=readonly
      componentName="классLookup"
      class=(if (v-get validationModel "класс" "isInvalid") "error")
      data-test-i-i-s-nrprap-прикол-e-класс=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "класс" "message")}}
  </div>
</form>
